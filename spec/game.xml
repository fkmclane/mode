<?xml version="1.0" encoding="UTF-8"?>
<spec>
	<title>.:Mode:.</title>

	<view>
		<width>800</width>
		<height>600</height>
	</view>

	<world>
		<width>1600</width>
		<height>600</height>
	</world>

	<font>
		<file>PressStart2P.ttf</file>
		<size>16</size>
	</font>

	<console>
		<box>
			<r>128</r>
			<g>128</g>
			<b>128</b>
			<a>128</a>
		</box>

		<text>
			<r>255</r>
			<g>255</g>
			<b>255</b>
			<a>255</a>
		</text>
	</console>

	<hud>
		<initial>5000</initial>

		<position>
			<x>20</x>
			<y>20</y>
		</position>

		<rotation>0</rotation>

		<text>
			<r>0</r>
			<g>255</g>
			<b>0</b>
			<a>255</a>
		</text>

		<box>
			<r>20</r>
			<g>20</g>
			<b>20</b>
			<a>200</a>
		</box>

		<str>
+------------------------+
|        .:Mode:.        |
|    A game where you    |
|    write the rules.    |
|                        |
|    WASD to move        |
|    H to toggle HUD     |
|    R to restart        |
|    Q to quit           |
|                        |
|        FPS: {fps}      |
|        HP:  {hp}       |
+------------------------+
		</str>
	</hud>

	<collision>
		<type>dialog</type>

		<position>
			<x>20</x>
			<y>550</y>
		</position>

		<rotation>0</rotation>

		<text>
			<r>0</r>
			<g>255</g>
			<b>0</b>
			<a>255</a>
		</text>

		<box>
			<r>20</r>
			<g>20</g>
			<b>20</b>
			<a>200</a>
		</box>

		<str>
+---------------------+
| Collision Detected! |
+---------------------+
		</str>
	</collision>

	<sky>
		<type>background</type>
		<index>0</index>

		<factor>0</factor>
		<tile>true</tile>

		<file>sky.png</file>
	</sky>

	<clouds>
		<type>background</type>
		<index>10</index>

		<factor>0.1</factor>
		<tile>false</tile>

		<file>clouds.png</file>
	</clouds>

	<city>
		<type>background</type>
		<index>20</index>

		<factor>0.5</factor>
		<tile>true</tile>

		<file>city.png</file>
	</city>

	<ground>
		<type>background</type>
		<index>30</index>

		<factor>1</factor>
		<tile>true</tile>

		<file>ground.png</file>
	</ground>

	<feature>
		<type>sprite</type>
		<index>50</index>
		<state>left</state>

		<position>
			<x>600</x>
			<y>250</y>
		</position>

		<rotation>0</rotation>

		<velocity>
			<x>0</x>
			<y>0</y>
		</velocity>

		<scale>5</scale>

		<sheets>
		    <left>
				<file>feature.left.png</file>

				<frames>4</frames>
				<interval>100</interval>
		    </left>

		    <right>
				<file>feature.right.png</file>

				<frames>4</frames>
				<interval>100</interval>
		    </right>
		</sheets>

		<collision>none</collision>
	</feature>

	<player>
		<type>player</type>
		<index>100</index>
		<state>right</state>

		<speed>
			<left>80</left>
			<right>80</right>
			<up>800</up>
			<down>80</down>
		</speed>

		<position>
			<x>100</x>
			<y>250</y>
		</position>

		<rotation>0</rotation>

		<velocity>
			<x>0</x>
			<y>0</y>
		</velocity>

		<scale>5</scale>

		<sheets>
		    <left>
				<file>hero.left.png</file>

				<frames>52</frames>
				<interval>100</interval>
		    </left>

		    <right>
				<file>hero.right.png</file>

				<frames>52</frames>
				<interval>100</interval>
		    </right>
		</sheets>

		<collision>pixel</collision>
	</player>
</spec>
